    <EmbeddedResource Include="..\Resources\Assembly\System.ValueTuple.dll" Link="Content\Resources\Assembly\System.ValueTuple.dll" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Indabo.Core\Indabo.Core.csproj" />
    <ProjectReference Include="..\Indabo.Host\Indabo.Host.csproj" />
  </ItemGroup>

</Project>
