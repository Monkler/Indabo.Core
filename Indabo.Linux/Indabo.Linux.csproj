  </ItemGroup>

  <ItemGroup>
    <Folder Include="Content\AssemblyResolver\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\Resources\Assembly\MySqlConnector.dll" Link="Content\Resources\Assembly\MySqlConnector.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\Resources\Assembly\Newtonsoft.Json.dll" Link="Content\Resources\Assembly\Newtonsoft.Json.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\Resources\Assembly\Microsoft.Data.Sqlite.dll" Link="Content\Resources\Assembly\Microsoft.Data.Sqlite.dll" />
